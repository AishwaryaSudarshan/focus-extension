{
  "manifest_version": 3,
  "name": "Focus Mode Extension",
  "version": "1.0",
  "description": "Hold notifications while on focus sites and release them as a summary.",
  "permissions": [
    "storage",
    "notifications",
    "tabs",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "extension/icon16.png"
    }
  },
  "icons": {
    "16": "extension/icon16.png"
  }
}
